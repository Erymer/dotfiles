[module/backlight]
type = custom/script
exec = xbacklight -get | sed 's/\.[0-9][0-9][0-9][0-9][0-9][0-9]//g' | xargs -I{} echo "Brillo: {}"
;exec = brightnessctl --machine-readable | cut -d, -f4 | cut -d% -f1
tail = true
interval = 0.1
label = %output:3%%
format =  <label>
format-padding = 1
format-background = ${colors.black}
format-foreground = ${colors.white}
scroll-up = xbacklight -inc 20
scroll-down = xbacklight -dec 20

[module/volume]
type = internal/pulseaudio
